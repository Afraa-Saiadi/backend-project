<%- include('./components/header')%>
    <h1 class="heading">Matrix Master Community<br>
      
        
        There are <%= result.length%>  questions
       
   </h1>
   <a style="float: right;border-radius: 20%;padding: 10px;;margin-top: -50px; background: rgb(126, 234, 238);" href='/add-question'>Add Question</a>
   <% if (result.length>0){ %>  
    <% result.forEach(element=>{ %>
          <div class="card" style="margin-bottom: 60px;">
            <div class="card-header">
                <h2><%= element.question %></h2>
            </div>
            <div class="card-body">
              <h5 class="card-description"><%= element.description %></h5>
              <p class="card-text"><%= element.createdAt %> </p>

              <a id='see-more' style="color: blue;" href=/question/<%= element._id  %>  class="card-link">see more</a>
            </div>
          </div> 
 <% }); %> 
<% } else { %>
    there is no record 
<% } %>      

