<%- include('./components/header')%>
<form method='POST' action='/add-question' style="width: 50%;">
    <div class="mb-3">
      <label for="exampleInputEmail1" class="form-label">Question</label>
      <input type="text" name='question' class="form-control" id="exampleInputEmail1">
      <input type="hidden" name='user_id' class="form-control" value=<%= user._id  %> >
      
      <% if (err && err.question ){ %>
        <h5 style="color: red;"><%= err['question'].message %> </h5>
      <% } %>  
      
    </div>
    <div class="mb-3">
      <label for="exampleInputPassword1" class="form-label">Description</label>
      <input type="text" name='description' class="form-control" style="width: 100%;height: 60%;" >
      <% if (err && err.description ){ %>
        <h5  style="color: red;"><%= err['description'].message %> </h5>
      <% } %> 
    </div>
    
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
<%- include('./components/footer')%>